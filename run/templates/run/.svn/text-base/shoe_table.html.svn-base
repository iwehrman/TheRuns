<table>
	<thead>
		<tr>
			<th>Make / Model</th>
			<th>Distance (mi)</th>
			<th>Active?</th>
			<th><!--a href="/shoe/new/">Add shoe</a-->&nbsp;</th>
		</tr>
	</thead>
{% for shoe in shoelist %}
	<tr>
    	<td><a href="/shoe/{{ shoe.id }}/"></a>{{ shoe.make }} {{ shoe.model }}</td>
		<td>{{shoe.miles|floatformat:0}}</td>
		<td>{{shoe.active|yesno:"Yes,No"}}</td>
		<td><a href="/shoe/remove/{{shoe.id}}">Remove</a></td>
	</tr>
{% endfor %}
</table>