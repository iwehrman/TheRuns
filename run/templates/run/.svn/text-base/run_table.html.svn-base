{% load humanize %}
<table>
	<thead>
		<tr> 
			<th>Date</th>
			<th>Distance</th>
			<th>Duration</th>
			<th>Pace</th>
			<th>HR</th>
			<th>Energy</th>
			<th>Eff.</th>
			<th><!--a href="/run/new/">Add run</a-->&nbsp;</th>
		</tr>
	</thead>
{% for run in runlist %}
	<tr>
		<td>{{ run.date|naturalday|capfirst }}</td>
		<td>{{ run.distance|floatformat:2 }}</td>
		<td>{{ run.duration_as_string }}</td>
		<td>{{ run.pace }}</td>
		<td>{{ run.average_heart_rate }} / {{run.heart_rate_percent|floatformat:0}}%</td>
		<td>{{ run.calories|floatformat:0 }}</td>
		<td>{{ run.efficiency|floatformat:3 }}</td>
		<td><a href="/run/remove/{{run.id}}">Remove</a></td>
	</tr>
{% endfor %}
</table>